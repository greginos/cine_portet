<div class="min-h-screen bg-gray-100">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-2xl font-bold text-gray-900">Ciné Portet</h1>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <a href="#accueil" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Accueil
            </a>
            <a href="#a-propos" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              À propos
            </a>
            <a href="#services" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Services
            </a>
            <%= link_to "Programmation", programmations_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <a href="#contact" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative bg-gray-900">
    <div class="absolute inset-0">
      <%= image_tag "cinema-background.jpg", class: "w-full h-full object-cover", alt: "Cinéma" %>
      <div class="absolute inset-0 bg-gray-900 opacity-75"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Ciné Portet</h1>
      <p class="mt-6 text-xl text-gray-300 max-w-3xl">
        Découvrez notre programmation de films d'auteur et de cinéma indépendant dans une ambiance chaleureuse et conviviale.
      </p>
    </div>
  </div>

  <!-- Prochaines séances -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Prochaines séances
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Réservez vos places pour les prochaines projections
      </p>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @programmations.each do |programmation| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center">
              <% if programmation.movie.poster_url.present? %>
                <%= image_tag programmation.movie.poster_url, class: "h-32 w-24 object-cover rounded", alt: programmation.movie.title %>
              <% end %>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  <%= programmation.movie.title %>
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= programmation.time.strftime("%d/%m/%Y") %> à <%= programmation.time.strftime("%H:%M") %>
                </p>
                <p class="mt-1 text-sm text-gray-500">
                  <%= programmation.movie.duration %> minutes - <%= programmation.movie.genre %>
                </p>
              </div>
            </div>
            <div class="mt-4">
              <p class="text-sm text-gray-500 line-clamp-3">
                <%= programmation.movie.description %>
              </p>
            </div>
            <div class="mt-4">
              <%= link_to "Voir les détails", programmation_path(programmation), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-12 text-center">
      <%= link_to "Voir toute la programmation", programmations_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Informations pratiques -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Informations pratiques
        </h2>
      </div>

      <div class="mt-12 grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Adresse</h3>
          <p class="mt-2 text-base text-gray-500">
            1 Place de la République<br>
            31120 Portet-sur-Garonne
          </p>
        </div>

        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Horaires</h3>
          <p class="mt-2 text-base text-gray-500">
            Ouverture des portes : 30 minutes avant chaque séance<br>
            Fermeture : après la dernière séance
          </p>
        </div>

        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Contact</h3>
          <p class="mt-2 text-base text-gray-500">
            Tél : 05 61 76 85 85<br>
            Email : contact@cineportet.fr
          </p>
        </div>
      </div>
    </div>
  </div>
</div> 