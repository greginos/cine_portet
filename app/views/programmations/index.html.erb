<div class="min-h-screen bg-gray-100 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Programmation des films
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Découvrez les prochains films au Ciné Portet
      </p>
    </div>

    <div class="mt-12">
      <%= month_calendar(events: @programmations) do |date, programmations| %>
        <div class="h-24 overflow-y-auto">
          <div class="text-sm font-medium text-gray-900">
            <%= date.day %>
          </div>
          <% programmations.each do |programmation| %>
            <div class="mt-1 text-xs text-indigo-600">
              <%= programmation.heure.strftime("%H:%M") %>
              <div class="font-medium text-gray-900">
                <%= programmation.titre %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @programmations.each do |programmation| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center">
              <% if programmation.affiche_url.present? %>
                <img class="h-32 w-24 object-cover rounded" src="<%= programmation.affiche_url %>" alt="<%= programmation.titre %>">
              <% end %>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">
                  <%= programmation.titre %>
                </h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= programmation.date.strftime("%d/%m/%Y") %> à <%= programmation.heure.strftime("%H:%M") %>
                </p>
                <p class="mt-1 text-sm text-gray-500">
                  <%= programmation.duree %> minutes - <%= programmation.genre %>
                </p>
                <p class="mt-1 text-sm text-gray-500">
                  Réalisé par <%= programmation.realisateur %>
                </p>
              </div>
            </div>
            <div class="mt-4">
              <p class="text-sm text-gray-500">
                <%= programmation.description %>
              </p>
            </div>
            <div class="mt-4">
              <p class="text-sm text-gray-500">
                <span class="font-medium">Avec :</span> <%= programmation.acteurs %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 