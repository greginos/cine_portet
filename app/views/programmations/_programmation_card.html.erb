<div class="bg-white shadow rounded-lg overflow-hidden">
  <% if programmation.movie.poster_url.present? %>
    <div class="relative h-72 overflow-hidden">
      <%# Image de fond floutÃ©e %>
      <img src="<%= programmation.movie.poster_url %>" class="absolute inset-0 w-full h-full object-cover blur-xl opacity-50 scale-110" alt="">
      
      <%# Image principale %>
      <img src="<%= programmation.movie.poster_url %>" class="relative z-10 w-full h-full object-contain p-4" alt="<%= programmation.movie.title %>">
    </div>
  <% end %>

  <div class="p-4">
    <h2 class="text-xl font-bold mb-2"><%= programmation.movie.title %></h2>
    <p class="text-gray-600 text-sm"><%= I18n.l(programmation.time, format: :long) %></p>
    <p class="text-gray-600 text-sm"><%= programmation.movie.duration %> minutes</p>
  </div>
</div>