<div class="mx-auto min-h-screen bg-gray-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Adhésion Ciné Portet</h1>
        <p class="text-gray-600">Rejoignez notre communauté de cinéphiles</p>
      </div>

      <%= form_with model: @user, url: memberships_path, local: true, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "erreur") %> à corriger :
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Votre nom" %>
          </div>
          <div>
            <%= form.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Votre prénom" %>
          </div>
        </div>
        <div>
          <%= form.label :email, "Courriel", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "votre.email@exemple.com" %>
        </div>
        <div>
          <%= form.label :phone, "Téléphone", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.telephone_field :phone, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "05 61 XX XX XX" %>
        </div>
        <div>
          <%= form.label :address, "Adresse", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :address, 
              rows: 3,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Votre adresse complète" %>
        </div>
        <div>
          <%= form.label :zip_code, "Code postal", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :zip_code, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Votre code postal" %>
        </div>
        <div>
          <%= form.label :city, "Ville", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :city, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Votre ville" %>
        </div>
        <div>
          <%= form.label :country, "Pays", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :country, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Votre pays" %>
        </div>
    <div>
  <%= form.label :membership_type, "Adhésion", class: "block text-sm font-medium text-gray-700 mb-2" %>

  <div class="space-y-2 mt-2">
    <div class="flex items-center">
      <%= form.radio_button :membership_type, "Adhésion simple", class: "h-4 w-4 text-blue-600 border-gray-300" %>
      <label class="ml-2 block text-sm text-gray-700">Adhésion simple : 10 €</label>
    </div>

    <div class="flex items-center">
      <%= form.radio_button :membership_type, "Adhésion couple", class: "h-4 w-4 text-blue-600 border-gray-300" %>
      <label class="ml-2 block text-sm text-gray-700">Adhésion couple : 15 €</label>
    </div>

    <div class="flex items-center">
      <%= form.radio_button :membership_type, "Adhésion de soutien", class: "h-4 w-4 text-blue-600 border-gray-300" %>
      <label class="ml-2 block text-sm text-gray-700">Adhésion de soutien : 25 €</label>
    </div>

    <div class="flex items-center">
      <%= form.radio_button :membership_type, "Adhésion couple de soutien", class: "h-4 w-4 text-blue-600 border-gray-300" %>
      <label class="ml-2 block text-sm text-gray-700">Adhésion couple de soutien : 30 €</label>
    </div>
  </div>
</div>


    <div class="flex items-center justify-between pt-6">
      <%= link_to "Retour", root_path, 
          class: "text-blue-600 hover:text-blue-800 font-medium" %>
      
      <%= form.submit "Créer l'adhésion", 
          class: "bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
    </div>
      <% end %>
    </div>
  </div>
</div>
