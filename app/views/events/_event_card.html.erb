<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-500">
  <div class="p-6">
    <!-- Badge événement -->
    <div class="flex items-center justify-between mb-3">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Événement
      </span>
      
      <% if event.linked_to_screening? %>
        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
          </svg>
          Lié à une projection
        </span>
      <% end %>
    </div>

    <!-- Titre de l'événement -->
    <h3 class="text-xl font-bold text-gray-900 mb-3">
      <%= event.title %>
    </h3>

    <!-- Date et heure -->
    <div class="flex items-center text-gray-600 mb-4">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="font-medium">
        <%= l(event.start_time, format: :long) %>
      </span>
    </div>

    <!-- Description -->
    <% if event.description.present? %>
      <div class="text-gray-700 mb-4 line-clamp-3">
        <%= simple_format(event.description, class: "text-sm") %>
      </div>
    <% end %>

    <!-- Projection associée -->
    <% if event.programmation&.movie %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600 mb-2">En lien avec la projection :</p>
        <div class="flex items-center">
          <% if event.programmation.movie.poster_url.present? %>
            <%= image_tag event.programmation.movie.poster_url, 
                          alt: event.programmation.movie.title,
                          class: "w-12 h-16 object-cover rounded mr-3" %>
          <% end %>
          <div>
            <p class="font-semibold text-gray-900 text-sm">
              <%= event.programmation.movie.title %>
            </p>
            <p class="text-xs text-gray-500">
              <%= l(event.programmation.time, format: :short) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>